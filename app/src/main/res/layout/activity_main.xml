<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="abcmeasurecorp.com.measureit.activities.MainActivity">

    <abcmeasurecorp.com.measureit.view.RulerView
        android:id="@+id/ruler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:accentColor="@color/colorAccent"
        app:metric="false"
        app:showPointer="true" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/right_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/card_padding">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card_negative_offset"
            android:layout_marginLeft="@dimen/card_negative_offset"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardElevation="@dimen/elevation_normal"
            app:contentPadding="@dimen/card_padding">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/margin_small">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:rotation="45"
                    android:src="@drawable/ic_ruler"
                    android:tint="@color/white"
                    tools:ignore="ContentDescription" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-8dp"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_header"
                    android:textStyle="bold"
                    app:fontFamily="@font/family_product_sans" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subtitle"
                    android:textColor="@color/white"
                    app:fontFamily="@font/family_product_sans" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/card_padding"
            android:layout_marginTop="@dimen/card_negative_offset"
            android:layout_marginEnd="@dimen/card_padding"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/elevation_normal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/icon_padding"
                android:layout_marginEnd="@dimen/icon_padding"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pointerToggle"
                    android:layout_width="@dimen/icon_size_large"
                    android:layout_height="@dimen/icon_size_large"
                    android:layout_gravity="center"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/icon_padding"
                    android:src="@drawable/ic_pointer"
                    android:tint="@color/colorAccent"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/unitsToggle"
                    android:layout_width="@dimen/icon_size_large"
                    android:layout_height="@dimen/icon_size_large"
                    android:layout_gravity="center"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/icon_padding"
                    android:src="@drawable/ic_units"
                    android:tint="@color/colorAccent"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/nightModeButton"
                    android:layout_width="@dimen/icon_size_large"
                    android:layout_height="@dimen/icon_size_large"
                    android:layout_gravity="center"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/icon_padding"
                    android:src="@drawable/ic_moon"
                    android:tint="@color/colorAccent"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>
